<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseBtn" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ButtonBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.ButtonForeground}" />
    </Style>
    <Style x:Key="BoardBtn" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBtn}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    <Style x:Key="CalcBtn" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBtn}">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Margin" Value="1" />
    </Style>
    <Style x:Key="FinalCalcBtn" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseBtn}">
        <Setter Property="FontSize" Value="26" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="#FFB60000" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="BorderBrush" Value="White" />
    </Style>
</ResourceDictionary>